@using BeQuestionBank.Shared.DTOs.Khoa
@using MudBlazor

<MudDialog FullWidth="true">
    <TitleContent>
        <MudText Typo="Typo.h6">@_dialogTitle</MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Label="Tên Khoa"
                      @bind-Value="Khoa.TenKhoa"
                      Variant="Variant.Outlined"
                      Required="true"
                      ErrorText="Tên khoa là bắt buộc"/>

        <MudTextField Label="Mô Tả"
                      @bind-Value="Khoa.MoTa"
                      Lines="3"
                      Variant="Variant.Outlined"/>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Secondary" Variant="Variant.Text">
            Đóng
        </MudButton>
        <MudButton OnClick="Submit" Color="Color.Primary" Variant="Variant.Filled"
                   Disabled="@string.IsNullOrWhiteSpace(Khoa.TenKhoa)">
            Lưu
        </MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public KhoaDto Khoa { get; set; } = new();
    [Parameter] public string DialogTitle { get; set; } = string.Empty;
    [Parameter] public EventCallback<KhoaDto> OnSave { get; set; }

    private string _dialogTitle;

    protected override void OnParametersSet()
    {
        _dialogTitle = DialogTitle;
    }

    private async Task Submit()
    {
        if (string.IsNullOrWhiteSpace(Khoa.TenKhoa))
        {
            return;
        }

        await OnSave.InvokeAsync(Khoa);
        MudDialog.Close(DialogResult.Ok(Khoa));
    }

    private void Cancel() => MudDialog.Cancel();
}