@page "/"

<MudContainer Class="my-5">

    <!-- Tiêu đề và biểu tượng -->
    <div class="text-center mb-5">
        <div class="d-flex justify-content-center mb-3">
            <MudPaper Class="d-flex align-center justify-center rounded-circle"
                      Elevation="0"
                      Style="@($"width:120px; height:120px;" +
                             $" background-color:{Colors.Blue.Darken3};" +
                             $" color:white;")">
                <MudIcon Icon="@Icons.Material.Filled.Book" Style="font-size:60px;" />
            </MudPaper>
        </div>
        <MudText Typo="Typo.h3" Class="text-uppercase fw-bold mb-2" Style="@($"color:{Colors.Blue.Darken3};")">
            Chào mừng đến với Ngân hàng Câu hỏi
        </MudText>
        <MudText Typo="Typo.h6" Class="text-secondary fw-medium">
            Hệ thống quản lý & tạo ngân hàng câu hỏi trắc nghiệm hiện đại cho các khoa, giảng viên
        </MudText>
    </div>

    <!-- Các tính năng -->
    <MudGrid Justify="Justify.Center" Spacing="4" Class="mb-8">
        <!-- CARD 1 -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="mud-theme-light pa-4 text-center hover-card-scale" Elevation="2">
                <MudCardContent>
                    <div class="d-flex justify-content-center mb-3">
                        <MudPaper Class=" pa-3 rounded-circle d-flex align-center justify-center" 
                                  Style="@($"width:50px; height:50px;"
                                         +$" background-color:{Colors.Blue.Darken3};")">
                            <MudIcon Icon="@Icons.Material.Filled.Book" Style="@($"color:{Colors.Blue.Lighten4};")" />
                        </MudPaper>
                    </div>
                    <MudText Typo="Typo.h6" Class="fw-bold mb-2" Style="@($"color:{Colors.Blue.Darken3};")">
                        Kho câu hỏi đa dạng
                    </MudText>
                    <MudText Typo="Typo.body2" Class="text-secondary" Style="min-height: 48px; display: flex; align-items: center; justify-content: center;">
                        Hơn 350+ câu hỏi trắc nghiệm chất lượng cao từ nhiều môn học khác nhau.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- CARD 2 -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="mud-theme-light pa-4 text-center hover-card-scale" Elevation="2">
                <MudCardContent>
                    <div class="d-flex justify-content-center mb-3">
                        <MudPaper Class="pa-3 rounded-circle d-flex align-center justify-center"
                                  Style="@($"width:50px; height:50px;" 
                                         + $" background-color:{Colors.Green.Darken3};")">
                            <MudIcon Icon="@Icons.Material.Filled.Description"
                                     Style="@($"color:{Colors.Green.Accent2};")"/>
                        </MudPaper>
                    </div>
                    <MudText Typo="Typo.h6"  Style="@($"color:{Colors.Green.Darken2};")" Class="fw-bold mb-2">
                        Tạo đề thi dễ dàng
                    </MudText>
                    <MudText Typo="Typo.body2" Class="text-secondary" Style="min-height: 48px; display: flex; align-items: center; justify-content: center;">
                        Tạo và quản lý các đề thi với nhiều cấu trúc và mức độ khác nhau.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>

        <!-- CARD 3 -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Class="pa-4 text-center hover-card-scale" Elevation="2">
                <MudCardContent>
                    <div class="d-flex justify-content-center mb-3">
                        <MudPaper Class="pa-3 rounded-circle d-flex align-center justify-content-center" 
                                  Style="@($"width:50px; height:50px;"
                                         + $" background-color:{Colors.LightBlue.Lighten1};")">
                            <MudIcon Icon="@Icons.Material.Filled.Search" Style="@($"color:{Colors.LightBlue.Lighten5};")" />
                        </MudPaper>
                    </div>
                    <MudText Typo="Typo.h6" Style="@($"color:{Colors.LightBlue.Accent3};")" Class="fw-bold mb-2">
                        Tìm kiếm thông minh
                    </MudText>
                    <MudText Typo="Typo.body2" Class="text-secondary" Style="min-height: 48px; display: flex; align-items: center; justify-content: center;">
                        Dễ dàng tìm kiếm câu hỏi theo nhiều tiêu chí khác nhau.
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>

    <!-- Bắt đầu sử dụng và Công cụ chính -->
    <MudGrid Justify="Justify.Center" Spacing="4" Class="mb-8">
    <!-- Card 1: Bắt đầu sử dụng -->
    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-5 h-100 hover-card-elevate"
                  Elevation="2"
                  Style="border: 2px solid #dce6ff; border-radius: 12px;">
            
            <div class="d-flex align-center mb-3">
                <MudIcon Icon="@Icons.Material.Filled.MenuBook"
                         Style="@($"color:{Colors.Blue.Darken3};")"
                         Size="Size.Large"
                         Class="me-2" />
                <MudText Typo="Typo.h6" Class="fw-bold m-0" Style="color: #0d47a1;">
                    Bắt đầu sử dụng
                </MudText>
            </div>

            <div class="d-grid gap-2 mt-4">

                <div class="d-flex align-center mt-1">
                    <MudPaper Class="pa-1 rounded-circle d-flex align-center justify-center me-3"
                              Style="@($"width:28px; height:28px; min-width:28px;" +
                                     $" background-color:{Colors.Blue.Darken3};")">
                        <MudText Class="text-white fw-bold" Typo="Typo.body1">1</MudText>
                    </MudPaper>
                    <MudText Typo="Typo.body1" Class="fw-bold" Style="@($"color:{Colors.Blue.Darken3};")">
                        Tạo đề thi theo yêu cầu
                    </MudText>
                </div>

                <div class="d-flex align-center mt-2">
                    <MudPaper Class="pa-1 rounded-circle d-flex align-center justify-center me-3"
                              Style="@($"width:28px; height:28px; min-width:28px; " +
                                     $"background-color:{Colors.Blue.Darken3};")">
                        <MudText Class="text-white fw-bold" Typo="Typo.body1">2</MudText>
                    </MudPaper>
                    <MudText Typo="Typo.body1" Class="fw-bold" Style="@($"color:{Colors.Blue.Darken3};")">
                        Quản lý đề thi
                    </MudText>
                </div>

                <div class="d-flex align-center mt-2">
                    <MudPaper Class="pa-1 rounded-circle d-flex align-center justify-center me-3"
                              Style="@($"width:28px; height:28px; min-width:28px; " +
                                     $"background-color:{Colors.Blue.Darken3};")">
                        <MudText Class="text-white fw-bold" Typo="Typo.body1">3</MudText>
                    </MudPaper>
                    <MudText Typo="Typo.body1" Class="fw-bold" Style="@($"color:{Colors.Blue.Darken3};")">
                        Nhập câu hỏi từ Word
                    </MudText>
                </div>

            </div>

        </MudPaper>
    </MudItem>

    <!-- Card 2: Công cụ chính -->
    <MudItem xs="12" sm="6">
        <MudPaper Class="pa-5 h-100 hover-card-elevate"
                  Elevation="2"
                  Style="border: 2px solid #d9f6e5; border-radius: 12px;">
            <div class="d-flex align-center mb-3">
                <MudIcon Icon="@Icons.Material.Filled.Settings"
                         Style="@($"color:{Colors.Green.Darken2};")"
                         Size="Size.Large"
                         Class="me-2" />
                <MudText Typo="Typo.h6"
                         Style="@($"color:{Colors.Green.Darken2};")"
                         Class="fw-bold m-0">
                    Công cụ chính
                </MudText>
            </div>

            <div class="d-grid gap-2">
                <MudButton Variant="Variant.Outlined"
                           StartIcon="@Icons.Material.Filled.MenuBook"
                           Class="justify-start text-start"
                           Style="@($"color:{Colors.Green.Darken2}; border-color:{Colors.Green.Darken2};")">
                    Quản lý câu hỏi
                </MudButton>

                <MudButton Variant="Variant.Outlined"
                           Style="@($"color:{Colors.Green.Darken2}; border-color:{Colors.Green.Darken2};")"
                           StartIcon="@Icons.Material.Filled.Description"
                           Class="justify-start text-start">
                    Quản lý đề thi
                </MudButton>

                <MudButton Variant="Variant.Outlined"
                           StartIcon="@Icons.Material.Filled.UploadFile"
                           Class="justify-start text-start"
                           Style="@($"color:{Colors.Green.Darken2}; border-color:{Colors.Green.Darken2};")">
                    Nhập câu hỏi từ Word
                </MudButton>
            </div>
        </MudPaper>
    </MudItem>
</MudGrid>


    <!-- Trang thống kê chi tiết -->
    <MudPaper Class="pa-6 mt-6 hover-card-elevate" Elevation="2" 
              Style="@($"background-color:{Colors.Blue.Lighten5};" +
                     $" border:1px solid {Colors.Blue.Lighten4};" +
                     $" border-radius:12px;")">
        <div class="d-flex align-center">
            <MudPaper Class="bg-primary bg-opacity-10 pa-4 rounded-circle me-4" Style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                <MudIcon Icon="@Icons.Material.Filled.Group" Style="@($"color:{Colors.Blue.Darken3};")" Size="Size.Large" />
            </MudPaper>
            <div class="flex-grow-1">
                <MudText Typo="Typo.h6" Class="fw-bold mb-1" Style="@($"color:{Colors.Blue.Darken3};")">
                    Trang thống kê chi tiết
                </MudText>
                <MudText Typo="Typo.body2" Class="mb-3" Style="@($"color:{Colors.Blue.Darken3};")">
                    Bạn muốn xem thông tin chi tiết về ngân hàng câu hỏi? 
                    Hãy truy cập trang Dashboard để xem các báo cáo và thống kê.
                </MudText>
                <MudButton Variant="Variant.Outlined" Class="fw-bold" Style="color: #0d47a1; border-color: #0d47a1;">
                    Đi đến Dashboard
                </MudButton>
            </div>
        </div>
    </MudPaper>
</MudContainer>

<style>
    /* Hiệu ứng hover nâng card */
    .hover-card-elevate {
        transition: all 0.25s ease;
    }
    .hover-card-elevate:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        transform: translateY(-4px);
    }

    /* Hiệu ứng scale nhẹ khi hover */
    .hover-card-scale {
        transition: all 0.3s ease;
    }
    .hover-card-scale:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12) !important;
    }

    /* Đảm bảo nút MudButton không viết hoa */
    .mud-button-root {
        text-transform: none !important;
    }

    /* Căn giữa nội dung card nhỏ */
    .equal-title {
        min-height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
    }
</style>

