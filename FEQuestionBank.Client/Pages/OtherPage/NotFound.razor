@page "/notfound"
;

<div class="notfound-container">
    <!-- Các yếu tố nền được hoạt hình -->
    <div class="background-elements">
        <div class="floating-orb orb-1"></div>
        <div class="floating-orb orb-2"></div>
        <div class="floating-orb orb-3"></div>
        <div class="animated-lines"></div>
    </div>

    <!-- Nội dung chính -->
    <div class="notfound-content">
        <!-- Mã lỗi 404 hoạt hình với hiệu ứng ánh sáng tương tác -->
        <div class="error-code-wrapper">
            <h1 class="error-code">
                <span class="digit" style="animation-delay: 0s;">4</span>
                <span class="digit" style="animation-delay: 0.1s;">0</span>
                <span class="digit" style="animation-delay: 0.2s;">4</span>
            </h1>
        </div>

        <!-- Tiêu đề hoạt hình -->
        <h2 class="error-title">Có gì đó sai sai.</h2>

        <p class="error-message">
            Xin lỗi, chúng tôi không tìm thấy trang này. Bạn vẫn có thể khám phá nhiều thứ trên trang chủ.
        </p>

        <!-- Nút tương tác với hiệu ứng hover -->
        <a href="/" class="home-button">
            <span class="button-text">Quay lại Trang Chủ</span>
            <span class="button-icon">→</span>
        </a>

        <!-- Gợi ý thay thế -->
        <p class="suggestion-text">
            Hoặc khám phá <a href="/" class="suggestion-link">trang chính</a> của chúng tôi
        </p>
    </div>
</div>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .notfound-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #0d47a1;
        padding: 20px;
        position: relative;
        overflow: hidden;
        font-family: 'Segoe UI', Helvetica, Arial, sans-serif;
    }

    /* Các yếu tố nền hoạt hình */
    .background-elements {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    .floating-orb {
        position: absolute;
        border-radius: 50%;
        opacity: 0.1;
        animation: float 20s infinite ease-in-out;
    }

    .orb-1 {
        width: 300px;
        height: 300px;
        background: rgba(255, 255, 255, 0.5);
        top: -50px;
        left: -50px;
        animation-delay: 0s;
    }

    .orb-2 {
        width: 200px;
        height: 200px;
        background: rgba(255, 255, 255, 0.5);
        top: 50%;
        right: -50px;
        animation-delay: 7s;
    }

    .orb-3 {
        width: 250px;
        height: 250px;
        background: rgba(255, 255, 255, 0.5);
        bottom: -50px;
        left: 30%;
        animation-delay: 14s;
    }

    @@keyframes float {
        0%, 100% {
            transform: translate(0, 0) rotate(0deg);
        }
        25% {
            transform: translate(30px, -30px) rotate(90deg);
        }
        50% {
            transform: translate(0, -50px) rotate(180deg);
        }
        75% {
            transform: translate(-30px, -30px) rotate(270deg);
        }
    }

    /* Nội dung chính */
    .notfound-content {
        text-align: center;
        max-width: 600px;
        z-index: 2;
        position: relative;
    }

    /* Mã lỗi 404 hoạt hình */
    .error-code-wrapper {
        perspective: 1000px;
        margin-bottom: 20px;
    }

    .error-code {
        font-size: 140px;
        font-weight: 900;
        color: white;
        margin: 0;
        line-height: 1;
        text-shadow: 0 10px 30px rgba(0, 0, 0, 0.3),
        0 0 40px rgba(255, 255, 255, 0.2);
        letter-spacing: -5px;
        display: flex;
        justify-content: center;
        gap: 10px;
    }

    .digit {
        display: inline-block;
        animation: bounce 1.5s infinite ease-in-out;
    }

    @@keyframes bounce {
        0%, 100% {
            transform: translateY(0) scale(1);
        }
        50% {
            transform: translateY(-20px) scale(1.1);
        }
    }

    .error-title {
        font-size: 42px;
        font-weight: 700;
        color: rgba(255, 255, 255, 0.95);
        margin: 30px 0 16px 0;
        animation: slideIn 0.8s ease-out 0.2s backwards;
    }

    .error-message {
        font-size: 18px;
        color: rgba(255, 255, 255, 0.8);
        margin: 0 0 50px 0;
        line-height: 1.6;
        animation: slideIn 0.8s ease-out 0.4s backwards;
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Nút tương tác */
    .home-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        color: white;
        font-weight: 700;
        font-size: 16px;
        padding: 14px 40px;
        border-radius: 50px;
        text-decoration: none;
        border: 2px solid rgba(255, 255, 255, 0.3);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        animation: slideIn 0.8s ease-out 0.6s backwards;
    }

    .home-button:hover {
        background: rgba(255, 255, 255, 0.3);
        border-color: rgba(255, 255, 255, 0.5);
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
    }

    .home-button:active {
        transform: translateY(-1px);
    }

    .button-icon {
        display: inline-block;
        transition: transform 0.3s ease;
    }

    .home-button:hover .button-icon {
        transform: translateX(5px);
    }

    /* Văn bản gợi ý */
    .suggestion-text {
        margin-top: 30px;
        font-size: 14px;
        color: rgba(255, 255, 255, 0.7);
        animation: slideIn 0.8s ease-out 0.8s backwards;
    }

    .suggestion-link {
        color: rgba(255, 255, 255, 0.95);
        text-decoration: underline;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .suggestion-link:hover {
        color: white;
    }

    /* Thiết kế đáp ứng */
    @@media (max-width: 768px) {
        .error-code {
            font-size: 90px;
            gap: 5px;
            letter-spacing: -3px;
        }

        .error-title {
            font-size: 32px;
            margin: 20px 0 12px 0;
        }

        .error-message {
            font-size: 16px;
            margin-bottom: 40px;
        }

        .home-button {
            font-size: 15px;
            padding: 12px 32px;
        }

        .floating-orb {
            opacity: 0.05;
        }
    }

    @@media (max-width: 480px) {
        .error-code {
            font-size: 70px;
        }

        .error-title {
            font-size: 26px;
        }

        .error-message {
            font-size: 15px;
        }

        .notfound-container {
            padding: 20px;
        }
    }
</style>

@code {
    [CascadingParameter] public Action<bool> SetHideLayout { get; set; }

    protected override void OnInitialized()
    {
        SetHideLayout?.Invoke(true);
    }

}
