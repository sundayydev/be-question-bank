@* App.razor *@
@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor

<MudThemeProvider />
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.Medium"
                   CloseButton="true"
                   BackdropClick="false"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />
<MudSnackbarProvider />
<MudPopoverProvider />

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            @* BẢO VỆ TOÀN BỘ TRANG → CHƯA LOGIN → VỀ /login *@
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <RedirectToLogin />
                </NotAuthorized>
            </AuthorizeRouteView>

            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>

        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <MudContainer Class="mt-8 text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Error" Size="Size.Large" Class="mb-3" Style="color: #d32f2f;" />
                    <MudText Typo="Typo.h5" Class="mb-2">Không tìm thấy trang.</MudText>
                    <MudButton Variant="Variant.Outlined" Href="/" Color="Color.Primary">
                        Quay về trang chủ
                    </MudButton>
                </MudContainer>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>