<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@Message</MudText>
        <MudAlert Severity="Severity.Warning" Class="mt-2">Hành động này không thể hoàn tác.</MudAlert>

        <div class="mt-4 p-3 border rounded">
            <MudText Typo="Typo.caption" Class="mb-1">Nội dung câu hỏi:</MudText>
            <LatexContent Content="@NoiDung"/>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Hủy</MudButton>
        <MudButton Color="Color.Error" Variant="Variant.Filled" OnClick="Submit">Xóa ngay</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    [Parameter] public string Message { get; set; } = "Bạn có chắc chắn muốn xóa?";
    [Parameter] public string NoiDung { get; set; } // Biến chứa nội dung câu hỏi

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}