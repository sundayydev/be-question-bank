@using BeQuestionBank.Shared.DTOs.CauTraLoi
@using FEQuestionBank.Client.Component.Other

<MudDialog MaxWidth="MaxWidth.Medium" FullWidth="true" Class=" mc-preview">
    <DialogContent>
        <MudContainer Style="max-height: 85vh;" Class="pa-0">

            <!-- Header: Thông tin phân loại - Basic -->
            <MudPaper Elevation="1" Class="pa-4 mb-4 rounded-lg info-banner">
                <MudGrid Spacing="1">
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.body2" Class="d-flex align-center text-neutral"><strong>Khoa:</strong> <span
                                class="ml-2">@TenKhoa</span></MudText>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.body2" Class="d-flex align-center text-neutral"><strong>Môn:</strong> <span
                                class="ml-2">@TenMon</span></MudText>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.body2" Class="d-flex align-center text-neutral"><strong>Chương:</strong>
                            <span
                                class="ml-2">@TenPhan</span></MudText>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.body2" Class="d-flex align-center gap-2 text-neutral">
                            <strong>CLO:</strong>
                            <MudChip T="string" Size="Size.Small" Color="Color.Secondary"
                                     Class="ml-1 px-2 py-0">
                                @CloName
                            </MudChip>
                        </MudText>
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.body2" Class="d-flex align-center text-neutral">
                            <strong>Cấp độ:</strong> <span class="ml-2">@CapDo</span>
                        </MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>

            <!-- Nội dung câu hỏi - Basic -->
            <MudPaper Elevation="1" Class="pa-4 mb-4 rounded-lg question-block">
                <MudText Typo="Typo.subtitle1" Class="mb-3 font-bold d-flex align-center text-neutral">
                    <MudIcon Icon="@Icons.Material.Filled.Help" Size="Size.Medium" Class="mr-2" Color="Color.Primary"/>
                    Nội dung câu hỏi
                </MudText>
                <MudText Typo="Typo.body2" Class="text-neutral"
                         Style="font-size: 1.05rem; line-height: 1.7; white-space: pre-wrap;">
                    <LatexContent Content="@NoiDungCha"/>
                </MudText>
            </MudPaper>

            <!-- Tiêu đề đáp án -->
            <MudText Typo="Typo.subtitle2" Class="mb-3 font-bold d-flex align-center text-neutral">
                <MudIcon Icon="@Icons.Material.Filled.Checklist" Size="Size.Small" Class="mr-2" Color="Color.Primary"/>
                Đáp án (@CauTraLoi.Count lựa chọn)
                <MudChip T="string" Size="Size.Small" Color="Color.Success" Variant="Variant.Outlined" Class="ml-2">
                    @(CauTraLoi.Count(a => a.LaDapAn)) đúng
                </MudChip>
            </MudText>

            <!-- Danh sách đáp án - Basic & rõ đáp án đúng (xanh lá) -->
            <div class="d-flex flex-column gap-2">
                @foreach (var (ans, i) in CauTraLoi.Select((a, idx) => (a, idx)))
                {
                    var label = (char)('A' + i);
                    var isCorrect = ans.LaDapAn;
                    var canShuffle = ans.HoanVi;

                    <MudPaper Elevation="0"
                              Class="pa-3 d-flex align-center rounded-lg transition-all"
                              Style="@(isCorrect
                                         ? "border-left: 4px solid #16a34a; background: #f0fdf4; border: 1px solid #bbf7d0;"
                                         : "border-left: 4px solid #e5e7eb; background: #fff; border: 1px solid #e5e7eb;")">

                        <MudAvatar Color="@(isCorrect ? Color.Success : Color.Default)"
                                   Variant="@(isCorrect ? Variant.Filled : Variant.Outlined)"
                                   Size="Size.Medium"
                                   Class="mr-3 font-bold flex-shrink-0"
                                   Style="font-size: 0.95rem;">
                            @label
                        </MudAvatar>

                        <MudText Class="flex-grow-1 text-neutral" Typo="Typo.body2"
                                 Style="@(isCorrect ? "font-weight: 600; color: #166534;" : "")">
                            <LatexContent Content="@ans.NoiDung"/>
                        </MudText>

                        <div class="d-flex align-center gap-2 flex-shrink-0">
                            @if (isCorrect)
                            {
                                <MudTooltip Text="Đáp án đúng" Placement="Placement.Top">
                                    <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success"
                                             Size="Size.Small"/>
                                </MudTooltip>
                            }

                            @if (canShuffle == true)
                            {
                                <MudTooltip Text="Xáo trộn" Placement="Placement.Top">
                                    <MudIcon Icon="@Icons.Material.Filled.Shuffle" Color="Color.Primary"
                                             Size="Size.Small"/>
                                </MudTooltip>
                            }
                            else
                            {
                                <MudTooltip Text="Cố định" Placement="Placement.Top">
                                    <MudIcon Icon="@Icons.Material.Filled.Lock" Color="Color.Default"
                                             Size="Size.Small"/>
                                </MudTooltip>
                            }
                        </div>
                    </MudPaper>
                }
            </div>

            <!-- Alert thông báo -->
            <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mt-4 rounded-lg" Elevation="0">
                <MudText Typo="Typo.body2" Class="text-neutral">
                    Câu hỏi <strong>Multiple Choice</strong>: Chọn <strong>@(CauTraLoi.Count(a => a.LaDapAn)) đáp án
                        đúng</strong>
                    @if (CauTraLoi.Any(a => a.HoanVi == true))
                    {
                        <text>. Một số đáp án sẽ xáo trộn.</text>
                    }
                </MudText>
            </MudAlert>

        </MudContainer>
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined" Color="Color.Primary">
            Sửa lại
        </MudButton>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Success"
                   OnClick="Submit"
                   Size="Size.Small"
                   StartIcon="@Icons.Material.Filled.SaveAlt">
            Xác nhận lưu
        </MudButton>
    </DialogActions>
</MudDialog>

<style>
    .mc-preview .text-neutral {
        color: #1f2937;
    }

    .info-banner {
        background: #f8fafc;
        color: #111827;
        border: 1px solid #e5e7eb;
        box-shadow: none;
    }

    .question-block {
        background: #ffffff;
        border: 1px solid #e5e7eb;
    }

    .gap-2 {
        gap: 0.5rem;
    }

    .gap-3 {
        gap: 0.75rem;
    }
</style>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string NoiDungCha { get; set; } = string.Empty;
    [Parameter] public List<CauTraLoiDto> CauTraLoi { get; set; } = new();

    [Parameter] public string TenKhoa { get; set; } = "Chưa chọn";
    [Parameter] public string TenMon { get; set; } = "Chưa chọn";
    [Parameter] public string TenPhan { get; set; } = "Chưa chọn";
    [Parameter] public string CloName { get; set; } = "N/A";
    [Parameter] public int CapDo { get; set; } = 1;

    private void Cancel() => MudDialog.Cancel();
    private void Submit() => MudDialog.Close(DialogResult.Ok(true));
}
